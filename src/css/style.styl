html, body
  box-sizing: border-box
body
  font-family: 'Helvetica Neue', sans-serif
  margin: 0
.todoListApp
  max-width: 530px
  padding: 0 15px
  margin: 0 auto
  ul
    list-style: none
    padding: 0
    margin: 0
    border: 1px solid
    li
      line-height: 35px
      padding: 0 10px
      &.completed
        text-decoration: line-through
      &:nth-child(even)
        background: #eee
      &:nth-child(odd)
        background: #fff
  .todoListForm
    display: flex;
    height: 35px
    border: 1px solid
    border-top: none
    input[type="text"]
      width: calc(100% - 150px)
      font-size: inherit
      border: none
      padding: 0 10px
      &::-webkit-input-placeholder
        opacity: .65
    input[type="submit"]
      width: 150px
      font-weight: bold
      border: none
      border-left: 1px solid
      background: #c5c5c5
      cursor: pointer
      transition: all .3s
      &:hover
        background: darken(#c5c5c5, 10%)
